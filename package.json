{
  "name": "link-copier",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -b && vite build && bun run esbuild.scripts.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "scripts/",
      "src/",
      "public/"
    ],
    "ext": "ts,tsx,css,json,png",
    "exec": "bun run build"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bunx biome format --write"
    ]
  },
  "dependencies": {
    "fast-glob": "^3.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/chrome": "^0.0.328",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "esbuild": "^0.25.5",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "typescript": "~5.8.3",
    "vite": "^6.3.5"
  }
}
